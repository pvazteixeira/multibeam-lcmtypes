package multibeam;

// message for a collection of range measurements (e.g. from a multibeam sonar or LIDAR)
// the pose reported in this message should be the instrument pose in the global frame
// the pose in each range_t should be the beam wrt the instrument
struct range_scan_t
{
  int64_t time;

  int32_t num_beams;
  range_t beams[num_beams];   

  double origin[3];       // sensor position    (global)
  double orientation[4];  // sensor orientation (global)

}
